@page
@model FirstWebApp.Pages.ContactModel
@{
}
<h3>Contact Form</h3>
@if (Model.hasData)
{
    <p>Hello @Model.firstName @Model.lastName</p>
    <p>We received your following message correctly: </p>
    <p>@Model.message</p>
}
<form method="POST">
    <label for="nombre">Name:</label>
    <input type="text" id="fname" name="firstname" required><br><br>

    <label for="email">Last Name:</label>
    <input type="text" id="lname" name="lastname" required><br><br>

    <label for="mensaje">Message:</label>
    <textarea id="message" name="message" required></textarea><br><br>

    <input type="submit" value="Submit">
</form>